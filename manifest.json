{
    "manifest_version": 2,

    "name": "Twitch Clip Manager",
    "description": "Track and manage your Twitch.tv clips!",
    "version": "1.0",

    "icons": {
        "16": "img/tcm_16.png",
        "32": "img/tcm_32.png",
        "128": "img/tcm.png"
    },

    "background": {
        "scripts": ["js/background.js"]
    },

    "options_page": "html/settings.html",

    "browser_action": {},

    "permissions": ["storage", "tabs", "webRequest", "https://clips.twitch.tv/clips", "https://clips-media-assets.twitch.tv/"]
}
